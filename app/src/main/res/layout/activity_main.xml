<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rectimage"
        android:layout_height="90dp"
        android:layout_width="400dp"
        android:background="@color/sky">
    </ImageView>

    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <solid android:color="@android:color/transparent"/>
        <corners android:radius="12px"/>
        <stroke  android:width="2dip" android:color="#ffcccc"/>
    </shape>

    <TextView
        android:id="@+id/staticTitleBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="14sp"
        android:text="Título"
        android:textAllCaps="false"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/staticCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="14sp"
        android:text="Código"
        android:textAllCaps="false"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/staticResum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="14sp"
        android:text="Resumen"
        android:textAllCaps="false"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/staticAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="14sp"
        android:text="Autor/a"
        android:textAllCaps="false"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/staticTitle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="440dp"
        android:text="Información sobre el libro"
        android:textAllCaps="true"
        android:textColor="#666666"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#555555"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/bookResum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#555555"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="334dp" />

    <TextView
        android:id="@+id/bookCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#555555"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#555555"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="240dp" />

</android.support.constraint.ConstraintLayout>